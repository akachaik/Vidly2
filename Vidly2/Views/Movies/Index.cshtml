@model IEnumerable<Movie>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">No movies to show.</div>
    <button class="btn btn-primary">Add new movie</button>
}
else
{
    @Html.ActionLink("New Movie", "New")

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", new { id = movie.Id})</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
